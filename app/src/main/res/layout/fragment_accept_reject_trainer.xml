<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcceptRejectTrainerFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:background="@color/black">

                <TextView
                    android:layout_width="411dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:text="Client's Description"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="101dp"
                android:layout_height="110dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/textview_border"
                android:src="@drawable/personvector" />

            <TextView
                android:id="@+id/ClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="30dp"
                android:text="Daniele Keith Gallaron"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:text="Age: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/clientAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="-35dp"
                android:text="19"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="Gender: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/clientGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="-34dp"
                android:layout_marginBottom="516dp"
                android:text="Male"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-500dp"
                android:text="Contact: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/clientContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-33dp"
                android:text="09055575525"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                android:text="Address: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/clientAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:text="Army Gym Bayani Road"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/clientCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:text="Client's City"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/clientZipCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="-33dp"
                android:text="ZipCode"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:text="Client's skill level: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/clientSkillLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="-35dp"
                android:text="Beginner"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="40dp"
                android:text="Medical Condtion:"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/clientMedHistory"
                android:layout_width="337dp"
                android:layout_height="48dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textview_border"
                android:text="N/A "
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:text="Schedule:"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/clientSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textview_border"
                android:text="Sunday 2:00 PM - 6:00 PM"
                android:textSize="25dp" />

            <CheckBox
                android:id="@+id/acceptCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:text="Accept Client"
                android:textSize="25dp" />

            <CheckBox
                android:id="@+id/rejectCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="Reject Client"
                android:textSize="25dp" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="130dp"
                android:layout_height="71dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/black"
                android:text="Save"
                android:textSize="25dp" />

        </LinearLayout>
    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
