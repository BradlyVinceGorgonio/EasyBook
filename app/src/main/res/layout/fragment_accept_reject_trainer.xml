<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcceptRejectTrainerFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:id="@+id/linearLayout"
            android:layout_width="416dp"
            android:layout_height="76dp"
            android:background="@color/black"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:layout_width="411dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:text="Client's Description"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp">

            </TextView>


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="101dp"
            android:layout_height="110dp"
            android:src="@drawable/personvector"
            android:background="@drawable/textview_border"
            android:layout_marginLeft="-260dp"
            android:layout_marginTop="90dp"
          />

        <TextView
            android:id="@+id/ClientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daniele Keith Gallaron"
            android:textSize="25dp"
            android:layout_marginLeft="-175dp"
            android:layout_marginTop="205dp"
            />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:textSize="25dp"
            android:layout_marginLeft="-290dp"
            android:layout_marginTop="250dp"

           />

        <TextView
            android:id="@+id/clientAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Age"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="250dp"
           />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender: "
            android:textSize="25dp"
            android:layout_marginLeft="-180dp"
            android:layout_marginTop="300dp"
 />


        <TextView
            android:id="@+id/clientGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="516dp"
            android:text="Client Gender"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="300dp"
             />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: "
            android:textSize="25dp"
            android:layout_marginLeft="-255dp"
            android:layout_marginTop="350dp"
   />

        <TextView
            android:id="@+id/clientContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client's Contact"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="350dp"
             />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textSize="25dp"
            android:layout_marginLeft="-185dp"
            android:layout_marginTop="450dp"

            />

        <TextView
            android:id="@+id/clientAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client's Current Address"
            android:textSize="25dp"
            android:layout_marginLeft="-204dp"
            android:layout_marginTop="480dp"
         />

        <TextView
            android:id="@+id/clientCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client's City"
            android:textSize="25dp"
            android:layout_marginLeft="-268dp"
            android:layout_marginTop="520dp"
      />

        <TextView
            android:id="@+id/clientZipCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZipCode"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="520dp"

         />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="-300dp"
            >



            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client's skill level: "
                android:textSize="25dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="20dp"
                />


            <TextView
                android:id="@+id/clientSkillLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill Level"
                android:textSize="25dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="20dp"
                 />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Condtion:"
                android:textSize="25dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="80dp"/>


            <TextView
                android:id="@+id/clientMedHistory"
                android:layout_width="337dp"
                android:layout_height="48dp"
                android:background="@drawable/textview_border"
                android:text="Medical History "
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="65dp"
              />


            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:text="Schedule:"
                android:textSize="25dp"
                android:layout_marginLeft="70dp"
               />

            <TextView
                android:id="@+id/clientSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Sched"
                android:textSize="25dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="190dp"
            />


            <CheckBox
                android:id="@+id/acceptCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept Client"
                android:textSize="25dp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="70dp"
               />

            <CheckBox
                android:id="@+id/rejectCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject Client"
                android:textSize="25dp"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="70dp"
          />


            <Button
                android:id="@+id/saveBtn"
                android:layout_width="130dp"
                android:layout_height="71dp"
                android:backgroundTint="@color/black"
                android:text="Save"
                android:textSize="25dp"
                android:layout_marginTop="380dp"
                android:layout_marginLeft="180dp"
                />



        </androidx.cardview.widget.CardView>





    </LinearLayout>
</ScrollView>
</FrameLayout>