<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/cardview_dark_background"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/displayUserNameLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6D6D6D"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Choose a field for sports"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp">

                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <ScrollView

            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_below="@+id/displayUserNameLayout"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/greycolor"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/BasketIns"
                    android:layout_width="match_parent"
                    android:layout_height="173dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fitness"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#000"
                                    android:shadowDx="-5"
                                    android:shadowDy="-2"
                                    android:shadowRadius="1"
                                    android:text="Basketball Instructor"
                                    android:textColor="#000000"
                                    android:textSize="25dp"></TextView>



                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/BadminIns"
                    android:layout_width="match_parent"
                    android:layout_height="173dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fitness"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#000"
                                    android:shadowDx="-5"
                                    android:shadowDy="-2"
                                    android:shadowRadius="1"
                                    android:text="Badminton Instructor"
                                    android:textColor="#000000"
                                    android:textSize="25dp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#000"
                                    android:shadowDx="-5"
                                    android:shadowDy="-2"
                                    android:shadowRadius="1"
                                    android:text="."
                                    android:textColor="#C0C0C0"
                                    android:textSize="19dp"></TextView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/SwimmingIns"
                    android:layout_width="match_parent"
                    android:layout_height="173dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sporty"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#000"

                                    android:shadowDx="-5"
                                    android:shadowDy="-2"
                                    android:shadowRadius="1"
                                    android:text="Swimming Instructor"
                                    android:textColor="#000000"
                                    android:textSize="25dp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#000"
                                    android:shadowDx="-5"
                                    android:shadowDy="-2"
                                    android:shadowRadius="1"
                                    android:text="."
                                    android:textColor="#C0C0C0"
                                    android:textSize="19dp"></TextView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/VolleyIns"
                    android:layout_width="match_parent"
                    android:layout_height="173dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fitness"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#000"
                                    android:shadowDx="-5"
                                    android:shadowDy="-2"
                                    android:shadowRadius="1"
                                    android:text="Volleyball Instructor"
                                    android:textColor="#000000"
                                    android:textSize="25dp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#000"
                                    android:shadowDx="-5"
                                    android:shadowDy="-2"
                                    android:shadowRadius="1"
                                    android:text="."
                                    android:textColor="#C0C0C0"
                                    android:textSize="19dp"></TextView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</FrameLayout>