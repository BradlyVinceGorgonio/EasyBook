<!-- item_user.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:background="@drawable/textview_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/profileImage"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/personvector"
            android:background="@drawable/textview_border"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/trainerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Name"
                android:background="@drawable/textview_border"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verified"
                android:textColor="#00ACEE"
                android:background="@drawable/textview_border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trainerPrice"
                android:text="Price per session: P"
                android:textSize="16dp"
                android:background="@drawable/textview_border"/>
            <TextView
                android:id="@+id/trainerDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not yet verified \nSatisfied Clients: \nFitness Expert"
                android:textSize="14sp"
                android:background="@drawable/textview_border"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>