<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookNowFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15sp"
                            android:text="COMFIRMATION OF BOOKING"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30dp">

                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="40dp"
                    android:text="Personal Description"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Current skill level:"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintVertical_bias="0.048" />

                <ScrollView
                    android:id="@+id/scrollView4"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="205dp"
                    android:layout_marginTop="-30dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView8"
                    app:layout_constraintEnd_toEndOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/Beginner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Beginner"
                                android:textSize="23dp" />

                            <RadioButton
                                android:id="@+id/Experienced"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Experienced"
                                android:textSize="23dp" />

                            <RadioButton
                                android:id="@+id/Intermediate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Intermediate"
                                android:textSize="23dp" />

                            <RadioButton
                                android:id="@+id/Advanced"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Advanced"
                                android:textSize="23dp" />

                        </RadioGroup>

                    </LinearLayout>

                </ScrollView>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Time Schedule:"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.82"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scrollView4" />

                <ScrollView
                    android:id="@+id/availabledates"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="-30dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView10"
                    app:layout_constraintEnd_toStartOf="@+id/textView10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            ></RadioGroup>

                    </LinearLayout>

                </ScrollView>


                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
              >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/textview_border"
                        app:cardCornerRadius="15dp">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="1dp"
                            android:text="Do you have any medical condtion?"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toTopOf="@+id/medicalconditionET"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/availabledates" />

                        <EditText
                            android:id="@+id/medicalconditionET"
                            android:layout_width="300dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="-305dp"
                            android:layout_marginTop="80dp"
                            android:background="@drawable/custom_edittext"
                            android:hint="N/A if none, Eleborate if Yes"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toTopOf="@+id/textView9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView10" />


                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-280dp"
                            android:layout_marginTop="160dp"
                            android:text="Enter your preferred location:"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            app:layout_constraintBottom_toTopOf="@+id/facilityadd"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/medicalconditionET" />

                        <EditText
                            android:id="@+id/facilityadd"
                            android:layout_width="300dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="-280dp"
                            android:layout_marginTop="240dp"
                            android:background="@drawable/custom_edittext"
                            android:hint=" Enter your training facility address:"
                            android:textSize="23sp"
                            app:layout_constraintBottom_toTopOf="@+id/booktrainer"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView9"></EditText>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="Booking Price:"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    app:layout_constraintBottom_toTopOf="@+id/trainerspriceET"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.129"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/facilityadd"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/trainerspriceET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-45dp"
                    android:layout_marginLeft="170dp"
                    android:text="Trainer's Price ₱"
                    android:textColor="@color/black"
                    android:background="@drawable/textview_border"
                    android:textSize="23dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.122"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/facilityadd"
                    app:layout_constraintVertical_bias="0.368"></TextView>




                <CheckBox

                    android:id="@+id/booktrainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="Book your Preferred location"
                    android:textSize="23dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintBottom_toTopOf="@+id/bookfacility"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.884"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/facilityadd" />

                <CheckBox

                    android:id="@+id/bookfacility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="book a session at the trainer's facility"
                    android:textSize="23dp"
                    app:layout_constraintBottom_toTopOf="@+id/confirmBook"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/booktrainer" />


                <Button
                    android:id="@+id/confirmBook"
                    android:layout_width="158dp"
                    android:layout_height="73dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/black"
                    android:text="Confirm Booking"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.975" />


            </LinearLayout>




        </ScrollView>




    </RelativeLayout>



</FrameLayout>