<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmissionApplicationActivity"
  >


    <androidx.cardview.widget.CardView
        android:id="@+id/displayUserNameLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="660dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:text="Submission of Application"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp">

            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="657dp"

        android:layout_marginEnd="1dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayUserNameLayout"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textSize="20sp"

                />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="353dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textview_border"
                android:hint="This will represent your bio"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvIDNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:text="ID Number"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etIDNumber"
                android:layout_width="353dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textview_border"
                android:hint="ID Number"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProfilePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="40dp"
                android:text="Profile Picture"
                android:textSize="20dp"

                />

            <Button
                android:id="@+id/btnProfilePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="-35sp"
                android:backgroundTint="#00B0FF"
                android:text="Upload Profile Picture"

                />

            <TextView
                android:id="@+id/tvValidID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="260dp"
                android:text="Valid ID"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnValidID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="-300sp"
                android:layout_marginBottom="248dp"
                android:backgroundTint="#00B0FF"
                android:text="Upload Valid ID" />

            <TextView
                android:id="@+id/tvProofOfDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="-210dp"
                android:text="Proof of Document"
                android:textSize="20dp"

                />

            <Button
                android:id="@+id/btnProofOfDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="-35sp"
                android:layout_marginBottom="176dp"
                android:backgroundTint="#00B0FF"
                android:text="Upload Proof of Document" />


            <EditText
                android:id="@+id/reasonET"
                android:layout_width="318dp"
                android:layout_height="100dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="-150dp"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:hint="Reason why you want to be a trainor" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Choose your Category below:"
                android:textSize="20sp"></TextView>


            <RadioGroup
                android:id="@+id/categoryGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp">

                <RadioButton
                    android:id="@+id/martialRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Martial Arts Instructor"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/fitnessRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fitness Instructor"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/sportsRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sports Instructor"
                    android:textSize="20dp" />

            </RadioGroup>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Choose your Field below:"
                android:textSize="20sp"></TextView>


            <CheckBox
                android:id="@+id/field1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Field 1"
                android:textSize="20dp">

            </CheckBox>

            <CheckBox
                android:id="@+id/field2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Field 2"
                android:textSize="20dp"></CheckBox>

            <CheckBox
                android:id="@+id/field3"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Field 3"
                android:textSize="20dp"></CheckBox>

            <CheckBox
                android:id="@+id/field4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:text="Field 4"
                android:textSize="20dp"></CheckBox>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Choose Preferred Day:"
                android:textSize="20sp"></TextView>

            <CheckBox
                android:id="@+id/Monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:text="Monday"
                android:textSize="20dp">

            </CheckBox>

            <CheckBox
                android:id="@+id/Tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:text="Tuesday"
                android:textSize="20dp"></CheckBox>

            <CheckBox
                android:id="@+id/Wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="Wednesday"
                android:textSize="20dp"></CheckBox>


            <CheckBox
                android:id="@+id/Thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-175dp"
                android:layout_marginBottom="100dp"
                android:text="Thursday"
                android:textSize="20dp"></CheckBox>


            <CheckBox
                android:id="@+id/Friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-90dp"
                android:layout_marginBottom="100dp"
                android:text="Friday"
                android:textSize="20dp"></CheckBox>


            <CheckBox
                android:id="@+id/Saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-90dp"
                android:layout_marginBottom="100dp"
                android:text="Saturday"
                android:textSize="20dp"></CheckBox>


            <CheckBox
                android:id="@+id/Sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-265dp"
                android:layout_marginBottom="100dp"
                android:text="Sunday"
                android:textSize="20dp"></CheckBox>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:text="Choose your preferred time:"
                android:textSize="20sp"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="From:"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"></TextView>

            <EditText
                android:id="@+id/fromtimeET"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="-27sp"
                android:background="@drawable/textview_border"
                android:hint="E,g 1:00"
                android:textSize="20dp"></EditText>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="-30sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/fromamCB"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="AM "
                        android:textSize="10sp">

                    </CheckBox>

                    <CheckBox
                        android:id="@+id/frompmCB"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="PM "
                        android:textSize="10sp">

                    </CheckBox>
                </LinearLayout>
            </ScrollView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="-95sp"
                android:text="To:"
                android:textSize="20dp"></TextView>

            <EditText
                android:id="@+id/totimeET"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="-27sp"
                android:background="@drawable/textview_border"
                android:hint="E,g 1:00"
                android:textSize="20dp"></EditText>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="-30sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/toamCB"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="AM "
                        android:textSize="10sp">

                    </CheckBox>

                    <CheckBox
                        android:id="@+id/topmCB"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="PM "
                        android:textSize="10sp">

                    </CheckBox>
                </LinearLayout>
            </ScrollView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Instructors suggested Training Facility:"
                android:textSize="20sp"></TextView>

            <EditText
                android:id="@+id/facilityadd"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/textview_border"
                android:hint=" Enter your training facility address:"
                android:textSize="20sp"></EditText>


            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:text="Enter your Price"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/trainerspriceET"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/textview_border"
                android:hint="E.g â‚±1,500"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="125dp"
                android:inputType="number"
                android:textSize="20dp">

            </EditText>


            <Button
                android:id="@+id/submitApplicationBtn"
                android:layout_width="187dp"
                android:layout_height="80dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/black"
                android:text="Submit application"
                android:textSize="20dp"


                />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>


