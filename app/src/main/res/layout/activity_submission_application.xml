<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmissionApplicationActivity"
  >


    <androidx.cardview.widget.CardView
        android:id="@+id/displayUserNameLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="-28dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tvDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:text="Submission of Application"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp">

            </TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="76dp"
        android:layout_height="107dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/textview_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/displayUserNameLayout"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="@id/displayUserNameLayout"
        app:layout_constraintTop_toBottomOf="@id/displayUserNameLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"

        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="255dp"
        android:layout_height="69dp"
        android:background="@drawable/textview_border"
        android:hint="Description"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/tvIDNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Number"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDescription"
        app:layout_constraintVertical_bias="0.031" />

    <EditText
        android:id="@+id/etIDNumber"
        android:layout_width="353dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:hint="ID Number"
        android:background="@drawable/textview_border"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIDNumber"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Profile Picture"

        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etIDNumber"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00B0FF"
        android:text="Upload Profile Picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etIDNumber"
        app:layout_constraintVertical_bias="0.082" />

    <TextView
        android:id="@+id/tvValidID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="260dp"
        android:text="Valid ID"

        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfilePicture"
        app:layout_constraintVertical_bias="0.253" />

    <Button
        android:id="@+id/btnValidID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="248dp"
        android:backgroundTint="#00B0FF"
        android:text="Upload Valid ID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnProfilePicture"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/tvProofOfDocument"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_marginBottom="188dp"
        android:text="Proof of Document"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvValidID"
        app:layout_constraintVertical_bias="0.229" />

    <Button
        android:id="@+id/btnProofOfDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="176dp"
        android:backgroundTint="#00B0FF"
        android:text="Upload Proof of Document"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnValidID"
        app:layout_constraintVertical_bias="0.061" />

    <Button
        android:id="@+id/submitApplicationBtn"
        android:layout_width="187dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="@color/black"
        android:text="Submit application"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnProofOfDocument"
        app:layout_constraintVertical_bias="0.957" />

    <ScrollView
        android:layout_width="199dp"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="169dp"

        app:layout_constraintBottom_toTopOf="@+id/editTextText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnProofOfDocument">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/martialbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Martial Arts Instructor"></CheckBox>

            <CheckBox
                android:id="@+id/fitnessbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fitness Instructor"></CheckBox>

            <CheckBox
                android:id="@+id/sportsbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sports Instructor"></CheckBox>


        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="318dp"
        android:layout_height="77dp"
        android:ems="10"
        android:hint="Reason why you want to be a trainor"
        app:layout_constraintBottom_toTopOf="@+id/submitApplicationBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProofOfDocument"
        app:layout_constraintVertical_bias="0.88" />
</androidx.constraintlayout.widget.ConstraintLayout>


